{% extends 'base.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block body %}
    <h1 class="mt-3">Liste des Éditeurs</h1>

    <div class="row mb-2 mt-2">
        <div class="col text-right">
            <a href="{{ path('publisher-new') }}" class="btn btn-primary">
                Nouvel éditeur
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Site web</th>
            <th>Actions</th>
        </tr>

        {%  for publisher in publisherList %}
            <tr>
                <td>{{ publisher.name }}</td>
                <td>{{ publisher.email }}</td>
                <td>{{ publisher.website}}</td>
                <td>

                </td>
            </tr>
        {% endfor %}

    </table>
{% endblock %}
