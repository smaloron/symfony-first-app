{% extends 'layout.html.twig' %}

{% block content %}

    <h1 class="mt-3">Nouvel article</h1>

    {{ form(articleForm) }}

{% endblock %}

{% block js %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('.custom-file input').on('change', function () {
                console.log($(this));
                let fileName = $(this)[0].files[0].name;
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
{% endblock %}