{% extends 'layout.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block content %}

    <h1 class="mt-3">Liste des livres</h1>

    <div class="row mb-2 mt-2">
        <div class="col text-right">
            <a href="{{ path('book-create') }}" class="btn btn-primary">
                Nouveau livre
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Ã‰diteur</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>

        {%  for book in bookList %}
            <tr>
                <td>{{ book.title }}</td>
                <td>
                    {%  if book.authors is  defined %}
                        {% for author in book.authors %}
                            {{ author.fullName }}
                        {% endfor %}
                    {% endif %}
                </td>
                <td>{{ book.publisher.name }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('book-delete', {'id': book.id}) }}">
                        Supprimer
                    </a>

                    <a href="{{ path('book-edit', {'id': book.id}) }}" class="ml-2">
                        Modifier
                    </a>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}
