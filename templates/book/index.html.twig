{% extends 'layout.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block content %}

    <h1 class="mt-3">Liste des livres</h1>

    <div class="row mb-2 mt-2">
        <div class="col text-right">
            <a href="{{ path('app_book_createbook') }}" class="btn btn-primary">
                Nouveau livre
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>

        {%  for book in bookList %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('book-delete', {'id': book.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}
